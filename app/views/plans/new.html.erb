<% provide(:title, "旅行の登録") %>
<div class="container">
  <div class="row">
    <h2>旅行登録</h2>
    <div class="col-md-6 col-md-offset-3">
　　   <%= form_with model: @plan, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class = 'form-group'>
          <%= f.label :title %>　<span class="input-need">※必須</span>
          <%= f.text_field :title, class: 'form-control', id: 'plan_title' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :date %> 　<span class="input-need">※必須</span>
          <%= f.text_field :date, class: 'form-control', id: 'plan-date' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :place %> 　<span class="input-need">※必須</span>
          <%= f.text_field :place, class: 'form-control', id: 'plan-place' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :meeting_place %>　<span class="input-need">※必須</span>
          <%= f.text_field :meeting_place, size: "30x4", class: 'form-control', id: 'plan-meeting-place' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :meeting_time %>　<span class="input-need">※必須</span>
          <%= f.text_field :meeting_time, class: 'form-control', id: 'plan-meeting-time' %>
        </div>
				<div class = 'form-group'>
          <%= f.label :content %>　<span class="input-need">※必須</span>
          <%= f.text_area :content, class: 'form-control', id: 'plan-content' %>
        </div>
        <span class="form-group">
          <%= f.label :image %>　<span class="input-need">※必須</span>
          <%= f.file_field :image, accept: 'image/jpeg,image/png', class: 'form-control', id: 'plan_image' %>
        </span>
        <div class = 'form-group'>
          <%= f.label :plan_comment %> 　<span class="input-need">※必須</span>
          <%= f.text_field :plan_comment, class: 'form-control', id: 'plan-comment' %>
        </div>
        <%= f.submit nil, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>