<% provide(:title, "#{@plan.title}") %>
<div class="travel-detail">
  <div class="container">
    <div class="travel-detail_contents">
      <div class="row">
        <div class="travel-detail_contents_main col-md-8">
          <h2><%= @plan.title %></h2>
          <table>
            <tr>
              <th>開催日</th>
              <td><%= @plan.date %></td>
            </tr>
            <tr>
              <th>集合場所</th>
              <td><%= @plan.meeting_place %></td>
            </tr>
            <tr>
              <th>集合時間</th>
              <td><%= @plan.meeting_time %></td>
            </tr>
            <tr>
              <th>旅行内容</th>
              <td><%= @plan.content %></td>
            </tr>
          </table>
          <%= link_to "この企画に申し込む", "#" %>
        </div>
      </div>
    </div>
  </div>
</div>
